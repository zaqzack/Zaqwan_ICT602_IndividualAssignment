<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/electricity_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Logo -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/electric_logo"
            android:layout_marginBottom="16dp" />

        <!-- Developer Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name: Ahmad Zaqwan Daniel\nBin Mohd Rashidi\nStudent ID: 2024554243\nCourse: ICT602 - Mobile Technology\nand Development\nÂ© 2025 Zaqwan. All Rights Reserved."
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- GitHub Link -->
        <TextView
            android:id="@+id/githubLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visit my GitHub page"
            android:textColor="#0000EE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:autoLink="web"
            android:layout_marginBottom="32dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="#FFEB3B"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
