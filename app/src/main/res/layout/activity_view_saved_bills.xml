<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewSavedBillsRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/electricity_bg"
    android:padding="16dp">

    <!-- Header Title -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved Bills"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />

    <!-- Bill List -->
    <ListView
        android:id="@+id/listViewBills"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_above="@+id/fabAddBill"
        android:layout_marginTop="16dp"
        android:divider="#CCCCCC"
        android:dividerHeight="1dp"
        android:padding="8dp"
        android:background="#80FFFFFF" />

    <!-- Floating Action Button: Add -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:contentDescription="Add Bill"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="#FFFFFF"
        android:backgroundTint="#6200EE" />

</RelativeLayout>
